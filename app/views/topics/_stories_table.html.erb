<!-- Page Content -->
<div id="page-content-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <a href="#menu-toggle" class="btn btn-default" id="menu-toggle"> <%= t(:all_topics) %> </a>

        <!--<h1>Stories</h1>-->
        <table class="table">
          <tr>
            <th><%= t("story.no") %></th>
            <th><%= t("story.title") %></th>
            <th><%= t("story.stext") %></th>
            <th><%= t("story.updated_at") %></th>
            <th><%= t("story.created_at") %></th>
            <th><%= t("story.actions") %></th>
          </tr>
          <% no = 0 %>
          <% if @stories.present? && @stories.any? %>
              <% @stories.each do |item| %>
                  <tr>
                    <td><%= no+=1 %></td>
                    <td><%= link_to item.try(:title), topic_story_path(@topic, item) %></td>
                    <td><%= item.try(:stext) %></td>
                    <td><%= item.try(:updated_at).try(:strftime, "%d/%m/%y %H:%M") %><%#= Time.now.strftime("%d/%m/%Y %H:%M:%S %z") #%></td>
                    <td><%= item.try(:created_at).try(:strftime, "%d/%m/%y %H:%M") %><%#= Time.now.strftime("%d/%m/%Y %H:%M:%S %z") #%></td>
                    <td><%= link_to t("story.more"), topic_story_path(@topic, item) %></td>
                  </tr>
              <% end %>
          <% else %>
              <tr>
                <td colspan="6" align="center"><%= t("no_stories") %></td>
              </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- /#page-content-wrapper -->