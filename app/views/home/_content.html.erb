<!-- Page Content -->
<div id="page-content-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <a href="#menu-toggle" class="btn btn-default" id="menu-toggle"> Topics</a>

        <!--<h1>Stories</h1>-->
        <table class="table">
          <tr>
          <th>#</th>
          <th>Story Title </th>
          <th>Story Text </th>
          <th>Date Time </th>
          <th>actions </th>
          </tr>
        <% (1..20).to_a.each do |item| %>
            <tr>
              <td><%="#{item}"%></td>
              <td><%="Story # #{item}"%></td>
              <td><%="description of the story ##{item}" * 3%></td>
              <td><%=Time.now.strftime("%d/%m/%Y %H:%M:%S %z")%></td>
              <td><%=link_to "more ... ", story_list_url %></td>
            </tr>
        <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- /#page-content-wrapper -->