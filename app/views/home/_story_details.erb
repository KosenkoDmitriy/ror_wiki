<!-- Page Content -->
<div id="page-content-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">All Stories</a>

        <% if @story.present? %>

            <p align="right">
              <a href="#" class="btn btn-success" role="button">New Story</a>
              <a href="#" class="btn btn-primary" role="button">Edit Story</a>
              <a href="#" class="btn btn-default" role="button">Next Story</a>
            </p>

            <div class="thumbnail text-center">
              <h3><%= @story.try(:title) || t(:no_story_title)%> (<%=@story.try(:updated_at)%>)</h3>

              <img src="http://media.jrn.com/images/640*360/Generic+President+Barack+Obama+Smiling.jpg"/>

              <div class="caption">
                <p><%= @story.try(:text) %></p>
              </div>
            </div>


