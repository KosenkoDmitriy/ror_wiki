<div class="container container-story center-block">
  <div class="title-header text-center">

    <% if @story.present? %>

        <h3><%= t("moderation.edit") %>: <%= @story.try(:title).present? ? @story.try(:title)  : t("story.no_title") %>
          <br>
          <%= form_for @story, url: {action: "update"}, html: {class: "form-horizontal story_form"} do |f| %>

              <%= render partial: "form", locals: {f: f} %>

          <% end %>
    <% else %>
        <h3><%= t("story.not_found") %></h3>
    <% end %>

  </div>
</div>
