<div class="container container-story center-block">
  <div class="title-header text-center">
    <% @topic.try(:title) %>
    <% if @story.present? # update action    %>
        <h1><%= t("story.new") %>
          <%#= @story.try(:date_time).try(:present?) ? "(#{@story.try(:date_time).try(:strftime, "%b %Y %H:%M")})" : "" #%></h1>
        <%= render partial: "shared/story_topics", locals: {items: @story.try(:topics)} %>

        <% form_url = topic_stories_url(@topic) if @topic.present? %>
        <%= form_for @story, url: form_url, action:"create", method:"POST", html: {class: "form-horizontal story_form"} do |f| %>
            <%= render partial: "form", locals: {f: f} %>
        <% end %>
    <% else # create action    %>
        <h3><%= t("no_story") %></h3>
    <% end %>
  </div>
</div>