<div class="container container-story center-block">
  <div class="title-header text-center">

    <% if @moderation.present? %>

        <h3><%= t("moderation.edit") %>: <%= @moderation.try(:title).present? ? @moderation.try(:title)  : t("moderation.no_title") %>
          <%#= @moderation.try(:date_time).try(:present?) ? "(#{@moderation.try(:date_time)})" : "" #%></h3>
         <br>
        <%= form_for @moderation, url: {action: "update"}, html: {class: "form-horizontal story_form"} do |f| %>

            <%= render partial: "form", locals: {f: f} %>

        <% end %>
    <% else %>
        <h3><%= t("moderation.not_found") %></h3>
    <% end %>

  </div>
</div>