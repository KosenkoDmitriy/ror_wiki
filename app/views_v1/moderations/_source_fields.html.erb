<div class="row">
  <div class="col-sm-12 container-fluid">
    <div class="nested-fields">
      <div class="field">
        <div class="col-sm-4">
          <%= f.text_field :title, class: "form-control btn-block", placeholder: t("source.title") %>
        </div>
      </div>
      <div class="field">
        <div class="col-sm-7">
          <%= f.text_field :url, class: "form-control btn-block", placeholder: t("source.url") %>
        </div>
      </div>

      <div class="col-sm-1">
        <%= link_to_remove_association (t("cocoon.defaults.remove")), f, class: "btn btn-danger btn-block" %>
      </div>
    </div>
  </div>
</div>
<br/>
